            fr = new FileReader(archivo); 
            br = new BufferedReader(fr); // Creem un BfReader per poder llegir líneas completas 

            
            
            
            while((textoFichero = br.readLine()) != null){
                
                separarText = textoFichero.split("\\s+");
                
                
                textFitxerLlista.put(separarText[0], separarText[1]);
                
                System.out.println(separarText[0]);
                System.out.println(separarText[1]);
                
                
            }
            
            
            
             
            
